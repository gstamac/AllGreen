<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AllGreen.Runner.WPF.MainWindow"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:my="clr-namespace:AllGreen.Runner.WPF"
        Title="MainWindow" Height="350" Width="800">
    <Window.Resources>
        <my:MainViewModel x:Key="mainViewModel"/>
    </Window.Resources>
    <Window.DataContext>
        <StaticResourceExtension ResourceKey="mainViewModel"/>
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding StartServerCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <my:MainView/>
</Window>
